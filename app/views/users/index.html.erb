<div style="min-height: 70px;">
  <%= image_tag "spinner", id: "spinner", height: '60', width: '60', style: "display: none;" %>
</div>

<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table id="users-list">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @users %>
  </tbody>
</table>

<br>

<%= render partial: "form", locals: {user: User.new} %>